{% extends 'front.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-9">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(form.color) }}
                        {{ form_errors(form.color) }}
                        {{ form_widget(form.color, {'attr': {'class': 'w-100'}}) }}
                        {{ form_help(form.color) }}
                    </div>
                </div>
                {{ form_row(form.individualPrice) }}

                <div class="row">
                    <div class="col-6 d-grid">
                        <a href="{{ path('app_account_index') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                    <div class="col-6 d-grid">
                        <input type="submit" class="btn btn-primary" value="{{ button_label|default('Sauvegarder') }}"/>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}